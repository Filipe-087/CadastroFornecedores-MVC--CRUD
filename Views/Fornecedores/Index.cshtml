@model List<FornecedorModel>
@{
    ViewData["Title"] = "Página Inicial";
}
<div class = "text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">   
        <a class ="btn btn-primary" role="button" asp-controller="Fornecedores" asp-action="Criar">Adicionar um novo Fornecedor</a>
    </div>
    <br/>
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn  bnt-sm close-alert" arial-label="Close"> X </button>
        @TempData["MensagemSucesso"]
    </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn  bnt-sm close-alert" arial-label="Close"> X </button>
        This is a danger alert—check it out!
    </div>
    }

    <br/> 
    <br />
    
    <h1 class="display-4">Listagem de Fornecedores </h1
    <br />
    <br />
    <br />

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Cnpj</th>
                <th scope="col">Especialidade</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(FornecedorModel fornecedor in Model)
                {
                    <tr>
                        <th scope="row">@fornecedor.Id</th>
                        <td>@fornecedor.Nome</td>
                        <td>@fornecedor.Cnpj</td>
                        <td>@fornecedor.Especialidade</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@fornecedor.Id" asp-controller="Fornecedores" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@fornecedor.Id" asp-controller="Fornecedores" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
